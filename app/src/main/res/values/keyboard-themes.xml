<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- For keyboard color scheme option dialog. -->
    <string-array name="keyboard_theme_names" translatable="false">
        <item>@string/keyboard_theme_system</item>
        <item>@string/keyboard_theme_system_border</item>
        <item>@string/keyboard_theme_light</item>
        <item>@string/keyboard_theme_dark</item>
        <item>@string/keyboard_theme_light_border</item>
        <item>@string/keyboard_theme_dark_border</item>
    </string-array>
    <!-- An element must be a keyboard theme id of
         {@link rkr.simplekeyboard.inputmethod.keyboard.KeyboardTheme#THEME_ID_ICS} etc. -->
    <integer-array name="keyboard_theme_ids" translatable="false" tools:ignore="InconsistentArrays">
        <item>5</item>
        <item>6</item>
        <item>3</item>
        <item>4</item>
        <item>1</item>
        <item>2</item>
    </integer-array>

    <array name="keyboard_theme_colors" translatable="false" tools:ignore="InconsistentArrays">
        <item>@color/background_lxx_system</item>
        <item>@color/background_lxx_system</item>
        <item>@color/background_lxx_light</item>
        <item>@color/background_lxx_dark</item>
        <item>@color/background_lxx_light</item>
        <item>@color/background_lxx_dark</item>
    </array>
</resources>
