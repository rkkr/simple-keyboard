<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case
            latin:showExtraChars="true"
            latin:keyboardLayoutSetElement="alphabetManualShifted">
            <include
                latin:keyboardLayout="@xml/key_styles_currency" />

            <Key
                latin:keySpec="!"
                latin:moreKeys="!text/morekeys_exclamation" />
            <Key
                latin:keySpec="\@" />
            <Key
                latin:keySpec="\#" />
            <Key
                latin:keyStyle="currencyKeyStyle"
                latin:keyLabelFlags="followKeyLetterRatio" />
            <Key
                latin:keySpec="!text/keyspec_symbols_percent"
                latin:moreKeys="!text/morekeys_symbols_percent" />
            <Key
                latin:keySpec="^" />
            <Key
                latin:keySpec="&amp;" />
            <Key
                latin:keySpec="*"
                latin:moreKeys="!text/morekeys_star" />
            <include
                latin:keyboardLayout="@xml/keys_parentheses" />
        </case>
        <default>
            <Key
                latin:keySpec="1" />
            <Key
                latin:keySpec="2" />
            <Key
                latin:keySpec="3" />
            <Key
                latin:keySpec="4" />
            <Key
                latin:keySpec="5" />
            <Key
                latin:keySpec="6" />
            <Key
                latin:keySpec="7" />
            <Key
                latin:keySpec="8" />
            <Key
                latin:keySpec="9" />
            <Key
                latin:keySpec="0" />
        </default>
    </switch>
</merge>
